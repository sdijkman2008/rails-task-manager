<h1>Edit Task</h1>

<%= form_for(@task) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <dir>
    <%= f.label :checkbox %>
    <%= f.check_box :completed, {}, "true", "false" %>
  </dir>
  <%= f.submit %>
<% end %>

<h3><%= link_to "Back to the list", tasks_path %></h3>
